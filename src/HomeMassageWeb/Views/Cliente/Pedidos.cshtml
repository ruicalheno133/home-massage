@model IEnumerable<HomeMassageWeb.Models.Servico>
@{
    ViewBag.Title = "Pedidos";
    Layout = "~/Views/Shared/_Cliente.cshtml";
}

<h2></h2>


<div class="container">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Massagem</th>
                        <th>Data</th>
                        <th>Endereço</th>
                        <th>Recibo</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id_Servico)
                        </td>
                        <td>
                            @if(item.Massagem == 1)
                            {
                                <p>Relaxante</p>
                            }

                            @if(item.Massagem == 2)
                            {
                                <p>Profunda</p>
                            }
                            @if(item.Massagem == 3)
                            {
                                <p>Sueca</p>
                            }
                            @if(item.Massagem == 4)
                            {
                                <p>Desportiva</p>
                            }
                            @if(item.Massagem == 5)
                            {
                                <p>Pré-Natal</p>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cartao_Credito)
                        </td>
                        <td>
                            @if(item.Estado == true)
                            {
                                <span class="label label-success">Efetuado</span>
                            }
                            else
                            {
                                <span class="label label-warning">Pendente</span>
                            }                            
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
