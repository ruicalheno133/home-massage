@{
    ViewBag.Title = "RegistarCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="animate fadeInUp one">
        <div class="row" id="pwd-container">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <section class="login-form">
                    <form method="post" action="/Cliente/AdicionarCliente" role="login">
                        <center>
                            <h2>Efetuar Registo</h2>
                            <input type="text" name="Username" maxlength="50" class="form-control" placeholder="Username" required />
                            <input type="password" name="Password" maxlength="50" class="form-control input-lg" id="password" placeholder="Password" required="" />
                            <input type="text" name="Nome" maxlength="50" class="form-control" placeholder="Nome" required />
                            <input type="email" name="Email" maxlength="50" class="form-control" placeholder="Email" required />
                            <input type="tel" name="Contacto" class="form-control" placeholder="Número de Telemóvel" required />
                            <input type="date" name="Data_Nascimento" class="form-control" required />
                            <input type="number" name="Numero_Contribuinte" maxlength="9" class="form-control" placeholder="NIB" required />
                        </center>
                        <div class="pwstrength_viewport_progress"></div>
                        <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Registar</button>
                    </form>
                </section>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>