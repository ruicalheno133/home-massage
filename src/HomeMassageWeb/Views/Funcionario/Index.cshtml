@model IEnumerable<HomeMassageWeb.Models.Servico>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Funcionario.cshtml";
}

<h2>Serviços Agendados</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="span5">
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Massagem</th>
                        <th>Data</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.Massagem == 1)
                                {
                                    <p>Relaxante</p>
                                }
                                @if (item.Massagem == 2)
                                {
                                    <p>Profunda</p>
                                }
                                @if (item.Massagem == 3)
                                {
                                    <p>Sueca</p>
                                }
                                @if (item.Massagem == 4)
                                {
                                    <p>Desportiva</p>
                                }
                                @if (item.Massagem == 5)
                                {
                                    <p>Pré-Natal</p>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td align="right">
                                @using (Html.BeginForm("Servico", "Funcionario", FormMethod.Post))
                                {
                                    <button type="submit" name="Id_Servico" value=@item.Id_Servico class="btn btn-default btn-sm">
                                        <span class="glyphicon glyphicon-search"></span> Consultar
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>